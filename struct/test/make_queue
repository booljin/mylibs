CXX = g++
CC = gcc
RM = rm -f
CXXFLAGS += -Wall -g 

SRC_FILES = ../queue.cpp test_queue.cpp

O_FILES = $(foreach name, $(notdir $(SRC_FILES)), $(basename $(name)).o)
INC += $(foreach base_dir, $(dir $(SRC_FILES)), -I $(base_dir))


all:$(O_FILES)
	g++  -o queue_test $^

queue.o:../queue.cpp
	g++ $(CXXFLAGS) -c $(INC) $< -o $@
	
test_queue.o:test_queue.cpp
	g++ $(CXXFLAGS) -c $(INC) $< -o $@

clean:
	$(RM) $(O_FILES) test_queue
